# Production Environment Variables for EC2
# Replace these values with your actual production credentials

# Server Configuration
NODE_ENV=production
PORT=3000

# Database
DB_URI=your_mongodb_connection_string_here

# Security
JWT_SECRET=your_jwt_secret_here_generate_a_strong_random_string
SESSION_SECRET=your_session_secret_here_generate_a_strong_random_string

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
# Add your CloudFront distribution URL here
CORS_ORIGINS=https://your-cloudfront-distribution.cloudfront.net,https://your-custom-domain.com

# Frontend URL (CloudFront)
CLIENT_PATH=https://your-cloudfront-distribution.cloudfront.net
